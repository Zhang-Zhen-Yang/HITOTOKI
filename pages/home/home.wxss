/* pages/home/home.wxss */
.home-container{
    height:100%;
    display:flex;
    flex-direction:column;
    justify-content:flex-start;
    align-items:stretch;
    /*background-color: red;*/
    padding:0 10px;
    background-color: #f8f8f8;
}
#top{
  display: flex;
  justify-content: center;
  padding:20rpx 0;

}
#top image{
  width:300rpx;
  
}

.shop-list{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  flex:1;
  /*background-color:yellow;*/
  justify-content: space-between;
}
.shop-list image{
  margin-bottom:20rpx;
}
.shop-list .word-block{
  width:345rpx;
  height:345rpx;
  padding:20rpx;
  box-sizing:border-box;
  line-height:1em;
  font-family: 黑体;
}
.projuct-details-btn{
  display: inline-block;
  color:white;
  padding:15rpx 20rpx;
  font-size:25rpx;
  background-color:#999;
}
.word-block .product-details-message{
  font-size:20rpx;
  margin-top:0;
  line-height:1.5em;
  padding:5rpx;
}