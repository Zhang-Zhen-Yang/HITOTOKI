/* kitta.wxss */
.kitta-container{
  position:fixed;
  padding:0 0;
  height:100%;
}
.infinity-scroll{
  animation: scroll 40s infinite;
  animation-timing-function: linear;
  background-position-x: 200rpx;
  height:700rpx;
  width:750rpx;
  background-image:url(http://www.kingjim.co.jp/sp/kitta/images/hero-image-05.png);
  background-size:auto 700rpx;
}
@keyframes scroll{
  0%{
    background-position-x: 0%;
  }
  100%{
    background-position-x: 111%;
    
  }
}

.infinity-scroll-warp{
  margin-top:50rpx;
  background-image:url(http://www.kingjim.co.jp/sp/kitta/images/hero-image-04.png);
  background-size:auto 780rpx;
  padding:30rpx;
  height:780rpx;
  background-repeat: repeat-x;
}

.kitta-top{
  display: flex;
  flex-direction: rox;
  align-items: stretch;
  width:100%;
  height:100rpx;
  background-color:white;
  position: fixed;
  top:0;
  left:0;
  border-bottom:1rpx solid gray;
}
.nav-item{
  flex:1;
  background-size:auto 100%;
  background-repeat: no-repeat;
  background-position: center center;
}
.nav-item.active{
  border-bottom: 5rpx solid red;
}

/*first page*/
.kitta-tte-fadein{
  display: flex;
  justify-content: center;
  align-items: center;
  height:420rpx;
}
.kitta-tte-fadein image{
  position: absolute;
  top:0;
  left:0;
  width:750rpx;
  transition:opacity 5s linear;
}
.kitta-tte-fadein .kitta-tte-fadein-title{
  width:200rpx;
  position: static;
}

/*second page*/
.line-up-text-wrap{
  padding:10rpx 20rpx;
  font-family: 黑体;
}
.line-up-base-warp{
  width:100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /*background-color: yellow;*/
  justify-content: space-around;
}
.line-up-base-item{
  width:200rpx;
  text-align: center;
  margin:20rpx 0;
}
.line-up-base-item image{
  width:100%;
}
.line-up-base-item text{
  font-size: 30rpx;
  font-family: 黑体;
}
.line-up-details-wrap{
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background-color:rgba(0,0,0,0.3);
}
.line-up-details{
  position:fixed;
  width:700rpx;
  height:700rpx;
  padding:10rpx;
  background-color: red;
  left:0;
  top:50%;
  right:0;
  bottom:0;
  margin:0 auto;
  transform: translateY(-50%);
  background: url(http://www.kingjim.co.jp/sp/kitta/images/bg-modal.png);
  background-size: 100% 100%;
}
.line-up-details .line-up-details-content{
  width:100%;
  height:100%;
}
.line-up-details-dismiss{
  position: absolute;
  right:-20rpx;
  top:-20rpx;
  width:60rpx;
  height:60rpx;
}